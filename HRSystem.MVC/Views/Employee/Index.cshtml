@model IEnumerable<HRSystem.Application.DTOs.Employees.Responses.EmployeeResponse>

@{
    ViewData["Title"] = "თანამშრომლების სია";
}

<h1>თანამშრომლების სია</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
}

<div class="d-flex justify-content-between mb-3">
    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> თანამშრომლის დამატება
        </a>
    </p>

    <form asp-action="Index" method="get" class="d-flex">
        <input type="text"
               name="SearchString"
               value="@ViewBag.CurrentSearch"
               placeholder="ძიება სახელით, გვარით ან პ/ნ-ით"
               class="form-control me-2"
               style="min-width: 300px;" />
        <input type="submit" value="ძიება" class="btn btn-info" />
        <a asp-action="Index" class="btn btn-secondary ms-2">ყველა</a>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>სახელი, გვარი</th>
            <th>პირადი ნომერი</th>
            <th>თანამდებობა</th>
            <th>სტატუსი</th>
            <th>დაბადების თარიღი</th>
            <th>ოპერაციები</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.PersonalNumber</td>
                    <td>@item.PositionName</td>
                    <td><span class="badge bg-@(@item.Status == "Active" ? "success" : "secondary")">@item.Status</span></td>
                    <td>@item.BirthDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> რედაქტირება
                        </a>

                        <button type="button" class="btn btn-sm btn-danger delete-btn" data-id="@item.Id" data-name="@item.FullName">
                            <i class="fas fa-trash-alt"></i> წაშლა
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">
                    არცერთი თანამშრომელი არ მოიძებნა.
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">თანამშრომლის წაშლა</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ნამდვილად გსურთ თანამშრომლის (<strong id="employeeName"></strong>) წაშლა?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">არა</button>
                <form id="deleteForm" asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" id="deleteId" name="id" />
                    <button type="submit" class="btn btn-danger">დიახ</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-btn').on('click', function () {
                var employeeId = $(this).data('id');
                var employeeName = $(this).data('name');

                $('#employeeName').text(employeeName);
                $('#deleteId').val(employeeId);

                var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
                deleteModal.show();
            });
        });
    </script>
}